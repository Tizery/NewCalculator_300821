<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalcButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="backgroundTint">@color/btn_color</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="strokeColor">@color/stroke_color</item>
    </style>

    <style name="CalcButtonBlack" parent="CalcButton">
        <item name="backgroundTint">@color/btn_color_theme_2</item>
    </style>

    <style name="CalcTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="materialButtonStyle">@style/CalcButton</item>
    </style>

    <style name="CalcThemeBlack" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="materialButtonStyle">@style/CalcButtonBlack</item>
    </style>

</resources>